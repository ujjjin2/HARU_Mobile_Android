<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/HomeFragment_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/HomeFragment_Toolbar"
        android:background="@color/white">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@+id/notice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/notice">
    </TextView>

    <View
        android:id="@+id/user_modify"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/notice"
        android:background="@color/white">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 정보수정"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@+id/user_modify"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/user_modify">
    </TextView>

    <View
        android:id="@+id/user_logout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/user_modify"
        android:background="@color/white">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@+id/user_logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/user_logout">
    </TextView>

    <View
        android:id="@+id/user_exit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/user_logout"
        android:background="@color/white">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@+id/user_exit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/user_exit">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>