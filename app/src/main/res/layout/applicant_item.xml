<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/applicant_userImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/test" >
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/applicant_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="손윤호손윤호손윤호"
                    android:textColor="@color/black"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp">
                </TextView>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/right"
                    android:layout_gravity="bottom">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별점"
                    android:textSize="11dp"
                    android:layout_marginLeft="16dp">

                </TextView>

                <TextView
                    android:id="@+id/applicant_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.3"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="11dp"
                    android:layout_marginLeft="10dp">

                </TextView>

                <TextView
                    android:id="@+id/applicant_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp" >
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/applicant_self_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기소개입니다."
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:text="확정"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/register_btn2"
                android:enabled="false"
                android:visibility="invisible">

            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>